set folder = "~/.mail/"
set sendmail = "msmtp -a bartol"

set from = "b@bartol.dev"
set realname = "Bartol Deak"

set spoolfile = "+INBOX"
set record = "+Sent"
set trash = "+Trash"
set postponed = "+Drafts"
mailboxes =INBOX =Sent =Trash =Drafts =Archive =Spam

# settings
set sort = "reverse-date"
set forward_format = "Fwd: %s"
set markers = no                     # hide + on line wraps
set pager_stop = yes                 # stop at bottom of message
set mark_old = no                    # unread until read
set sleep_time = 0                   # disable pause info messages

# sync
macro index \Cs "<shell-escape>mbsync -V bartol<enter>" "sync imap"

# go to
bind index <Space> noop
macro index <Space>i "<change-folder>=INBOX<enter>" "go to inbox"
macro index <Space>s "<change-folder>=Sent<enter>" "go to sent"
macro index <Space>t "<change-folder>=Trash<enter>" "go to trash"
macro index <Space>d "<change-folder>=Drafts<enter>" "go to drafts"
macro index <Space>a "<change-folder>=Archive<enter>" "go to archive"
macro index <Space>S "<change-folder>=Spam<enter>" "go to spam"

# move mail to
bind index,pager M noop
macro index,pager Mi ";<save-message>=INBOX<enter>" "move mail to inbox"
macro index,pager Mt ";<save-message>=Trash<enter>" "move mail to trash"
macro index,pager Md ";<save-message>=Drafts<enter>" "move mail to drafts"
macro index,pager Ma ";<save-message>=Archive<enter>" "move mail to archive"
macro index,pager Ms ";<save-message>=Spam<enter>" "move mail to spam"

# vi bindings
bind attach,browser,pager,index g noop
bind attach,browser,index gg first-entry
bind attach,browser,index G last-entry
bind pager gg top
bind pager G bottom

bind pager k previous-line
bind pager j next-line
bind pager \Cn next-entry
bind pager \Cp previous-entry

bind attach,browser,pager,index \Cf next-page
bind attach,browser,pager,index \Cb previous-page
bind attach,browser,pager,index \Cu half-up
bind attach,browser,pager,index \Cd half-down

# aliases
alias me b@bartol.dev

# colors
color normal color07 color00
color error color01 color00
color indicator color07 color18
color status color250 color18
