#!/usr/bin/env bash
#
# Install Programs

sudo apt update -y
sudo apt upgrade -y
sudo apt install -y \
	fish \
	# zsh \
	kakoune \
	# vim-gtk \
	git \
	ripgrep \
	editorconfig \
	curl \
	entr \
	# tmux \
	# tldr \
	xclip \
	wget \
	# jq \
	trash-cli \
	# pandoc \
	# tree \
	# whois \
	moreutils \
	sqlite3 \
	postgresql \
	postgresql-contrib \
	# golang \
	# nodejs \
	# npm \
	# yarn \
	# ruby \
	python3 \
	shellcheck

# change shell
sudo chsh -s $(which fish)

cd ~/Downloads

# gopls
go get golang.org/x/tools/gopls

# vgrep
curl -L https://github.com/vrothberg/vgrep/archive/master.zip -o vgrep.zip
unzip vgrep.zip -d vgrep
(cd vgrep/vgrep-master && make build && make install PREFIX=~/.local)
rm -rf vgrep.zip vgrep

# kak-lsp
curl -L https://github.com/ul/kak-lsp/releases/download/v8.0.0/kak-lsp-v8.0.0-x86_64-unknown-linux-musl.tar.gz -o kak-lsp.tar.gz
mkdir -pv kak-lsp
tar xzvf kak-lsp.tar.gz -C kak-lsp
mv -v kak-lsp/kak-lsp ~/.local/bin
rm -rf kak-lsp.tar.gz kak-lsp

# Iosevka
curl -L https://github.com/be5invis/Iosevka/releases/download/v3.0.0-rc.8/03-iosevka-term-3.0.0-rc.8.zip -o iosevka.zip
unzip iosevka.zip -d iosevka
mkdir -pv ~/.fonts
cp -vf iosevka/ttf/* ~/.fonts
rm -rf iosevka.zip iosevka

cd -
