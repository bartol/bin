#!/usr/bin/env bash
#
# Install Programs

sudo apt update
sudo apt upgrade -y
sudo apt install -y \
	zsh \
	vim-gtk `# vim with clipboard support` \
	git \
	make \
	gdb \
	gcc \
	python3 \
	shellcheck \
	sqlite3 \
	editorconfig \
	entr \
	curl \
	tmux \
	tmate \
	moreutils \
	trash-cli \
	pandoc \
	youtube-dl \
	blueman

cat << EOF
sudo chsh -s $(which zsh)
Go - https://golang.org/dl/
Rust - https://rustup.rs/
Iosevka - https://github.com/be5invis/Iosevka/releases
EOF
